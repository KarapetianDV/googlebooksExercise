<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        tools:src="@drawable/imagetotest" />


    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/book_image"
        android:layout_toEndOf="@+id/book_image"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Quilting With Donna Dewberry" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/book_image"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Donna Dewberry" />
</RelativeLayout>
